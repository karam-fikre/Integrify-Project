

@using Microsoft.AspNetCore.Identity
@using MBotRangerCore.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@{
    ViewData["Title"] = "MobileCam";
}
@if (SignInManager.IsSignedIn(User))
{
    <p><h2>Mobile Camera: </h2><b> Please open IP cam app on your mobile and start broadcasting </b></p>

    @section Scripts
        {
        <script src="~/js/_MobileCam.js"></script>
        <link rel="stylesheet" href="~/css/_robot_old.css" />
    }
    <div class="row">
        @*The appropriate width and height should be 640 and 480 respectively
            canvas size on js file should be the same with cshtml file to avoid croping*@
        <div class="col-md-6">
            @*The ip address of the camera mobile*@
            <img id="img2" src="http://192.168.1.104:8080/video" style="margin: 0;" width="500" height="330" />
        </div>
        <div class="col-md-6">
            <img id="img2" width="500" height="330" alt="capture" crossOrigin="Anonymous" />
        </div>
    </div>

    <div class="row">

        <div class="col-md-2">
            @*Button for capture images*@
            <button id="capture">Capture Photo</button>
        </div>

    </div>
}

